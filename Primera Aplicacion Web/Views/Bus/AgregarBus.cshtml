@model Primera_Aplicacion_Web.Models.BusCLS

@{
    ViewBag.Title = "Agregar Bus";
    List<SelectListItem> listaSucursal = (List<SelectListItem>)ViewBag.listaSucursal;
    List<SelectListItem> listaTipoBus = (List<SelectListItem>)ViewBag.listaTipoBus;
    List<SelectListItem> listaModelo = (List<SelectListItem>)ViewBag.listaModelo;
    List<SelectListItem> listaMarca = (List<SelectListItem>)ViewBag.listaMarca;
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-6">
        @using(Html.BeginForm("AgregarBus", "Bus", FormMethod.Post, new { @id = "addForm" })) {
            <div>
                @Html.LabelFor(model => model.iidsucursal)
                @Html.DropDownList("iidsucursal", listaSucursal, "Seleccione Sucursal...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.iidsucursal, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.iidtipobus)
                @Html.DropDownList("iidtipobus", listaTipoBus, "Seleccione Tipo de Bus...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.iidtipobus, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.placa)
                @Html.TextBoxFor(model => model.placa, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.placa, null, new { @class = "text-danger" })
            </div>
            <div>
                @if(Model != null && Model.errorMessage != null) {
                    <div class="text text-danger">@Model.errorMessage</div>
                }
            </div>
            <div>
                @Html.LabelFor(model => model.fechacompra)
                @Html.EditorFor(model => model.fechacompra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fechacompra, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.iidmodelo)
                @Html.DropDownList("iidmodelo", listaModelo, "Seleccione Modelo...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.iidmodelo, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.numerofilas)
                @Html.TextBoxFor(model => model.numerofilas, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.numerofilas, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.numerocolumnas)
                @Html.TextBoxFor(model => model.numerocolumnas, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.numerocolumnas, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.descripcion)
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcion, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.observacion)
                @Html.EditorFor(model => model.observacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.observacion, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.iidmarca)
                @Html.DropDownList("iidmarca", listaMarca, "Seleccione Marca...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.iidmarca, null, new { @class = "text-danger" })
            </div>
            <br />
            //El type="submit" envía la pagina al controlador
            <div style="margin:auto">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmationModal">
                    Guardar
                </button>
                @Html.ActionLink("Regresar", "Index", "Bus", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@ViewBag.Title</h4>
            </div>
            <div class="modal-body">
                Se va a agregar un elemento nuevo, ¿Desea continuar?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="saveChanges()">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>

<script>
    var addForm = document.getElementById("addForm");
    function saveChanges() {
        addForm.submit();
    }
</script>